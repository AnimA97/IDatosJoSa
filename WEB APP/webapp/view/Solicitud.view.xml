<mvc:View
	controllerName="sap.ui.billboarding.controller.Solicitud"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:semantic="sap.f.semantic"
	xmlns:f="sap.ui.layout.form">
	<semantic:SemanticPage id="page">
		<semantic:titleHeading>
			<Title
				id="masterHeaderTitle"
				text="Solicitud de Certificado de Antecedentes Judiciales"/>
		</semantic:titleHeading>
		<semantic:content>
			<f:SimpleForm id="simpleForm" editable="true"
				layout="ResponsiveGridLayout"
				title="Datos solicitud"
				labelSpanXL="3"
				labelSpanL="3"
				labelSpanM="3"
				labelSpanS="12"
				adjustLabelSpan="false"
				emptySpanXL="4"
				emptySpanL="4"
				emptySpanM="4"
				emptySpanS="0"
				columnsXL="1"
				columnsL="1"
				columnsM="1"
				singleContainerFullSize="false">
				<Title value="Datos solicitud"/>

                <Label text="Tipo de solicitud" />
                <ComboBox id="idTipoSolicitud" selectedKey="{/Solicitud/tipoSolicitud}">
                    <items>
                        <core:Item key="-" text="Común" />
                        <core:Item key="X" text="Urgente" />
                    </items>
                </ComboBox>

                <Label text="Número de documento" />
                <Input id="idNumeroDocumento"  value="{/Solicitud/nroDoc}" placeholder="Ingrese número de documento" />

                <Label text="Fecha de nacimiento" />
                <DatePicker id="idFechaNacimiento"  dateValue="{/Solicitud/fechaNacimiento}" placeholder="Seleccione fecha de nacimiento" />

                <Label text="Teléfono" />
                <Input id="idTelefono" placeholder="Ingrese teléfono" type="Tel"  value="{/Solicitud/tel}" />

                <Label text="Email" />
                <Input id="idEmail" placeholder="Ingrese email" type="Email"  value="{/Solicitud/email}"/>

                <Label text="Destino" />
                <ComboBox id="idDestino" placeholder="Seleccione destino"  selectedKey="{/Solicitud/destino}" items="{/Instituciones}">
					<core:Item key="{value}" text="{label}" />
                </ComboBox>

				<Label text="Tipo de tramite" visible="{= ${/Solicitud/destino} === '5'}" />
                <ComboBox  placeholder="Seleccione el tipo de tramite"  selectedKey="{/Solicitud/titular}" visible="{= ${/Solicitud/destino} === '5'}">
                    <items>
                        <core:Item key="-" text="Gestor" />
						<core:Item key="X" text="Titular" />
                    </items>
                </ComboBox>

				<Label text="Número de documento del gestor" visible="{= ${/Solicitud/destino} === '5' &amp;&amp; ${/Solicitud/titular} === '-'}"/>
                <Input placeholder="Ingrese número de documento"  value="{/Solicitud/nroDocGestor}" visible="{= ${/Solicitud/destino} === '5' &amp;&amp; ${/Solicitud/titular} === '-'}"/>
                
                <Label text="Oficina" />
                <ComboBox id="idOficina" placeholder="Seleccione oficina"  selectedKey="{/Solicitud/oficina}" items="{/Oficinas}">
					<core:Item key="{value}" text="{label}" />
                </ComboBox>
				
				<Label text="" />
				<Button text="Enviar" press="enviarSolicitud" />
            </f:SimpleForm>
		</semantic:content>
	</semantic:SemanticPage>
</mvc:View>