<mvc:View
	controllerName="sap.ui.billboarding.controller.Cita"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:semantic="sap.f.semantic"
	xmlns:f="sap.ui.layout.form">
	<semantic:SemanticPage id="page">
		<semantic:titleHeading>
			<Title
				id="masterHeaderTitle"
				text="Solicitud de Certificado de Antecedentes Judiciales"/>
		</semantic:titleHeading>
		<semantic:content>
			<f:SimpleForm id="simpleForm" editable="true"
				layout="ResponsiveGridLayout"
				title="Saleccione cita"
				labelSpanXL="3"
				labelSpanL="3"
				labelSpanM="3"
				labelSpanS="12"
				adjustLabelSpan="false"
				emptySpanXL="4"
				emptySpanL="4"
				emptySpanM="4"
				emptySpanS="0"
				columnsXL="1"
				columnsL="1"
				columnsM="1"
				singleContainerFullSize="false">

                <Label text="DÃ­a" />
                <ComboBox placeholder="Seleccione destino"  value="{/Cita/dia}" items="{/Fechas}"  change="actualizarHorariosDisponibles">
					<core:Item key="{value}" text="{label}" />
                </ComboBox>

				<Label text="Hora" />
                <ComboBox value="{/Cita/hora}" items="{/Horarios}" editable="{= ${/Cita/dia} }">
					<core:Item key="{value}" text="{label}" />
                </ComboBox>

				<Button text="Enviar" press="enviarCita" />
            </f:SimpleForm>
		</semantic:content>
	</semantic:SemanticPage>
</mvc:View>