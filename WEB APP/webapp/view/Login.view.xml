<mvc:View
	controllerName="sap.ui.procesosDNPC.controller.Login"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:semantic="sap.f.semantic"
	xmlns:f="sap.ui.layout.form">
	<semantic:SemanticPage id="page">
		<semantic:titleHeading>
			<Title
				id="masterHeaderTitle"
				text="Solicitud de Certificado de Antecedentes Judiciales"/>
		</semantic:titleHeading>
		<semantic:content>
			<f:SimpleForm id="simpleForm" editable="true"
				layout="ResponsiveGridLayout"
				title="Login"
				labelSpanXL="3"
				labelSpanL="3"
				labelSpanM="3"
				labelSpanS="12"
				adjustLabelSpan="false"
				emptySpanXL="4"
				emptySpanL="4"
				emptySpanM="4"
				emptySpanS="0"
				columnsXL="1"
				columnsL="1"
				columnsM="1"
				singleContainerFullSize="false">

                <Label text="Usuario" />
                <Input value="{/Usuario/Nombre}"/>

                <Label text="ContraseÃ±a" />
                <Input value="{/Usuario/Pass}" type="Password"/>

				<Label text="" />
				<Button text="Acceder" press="handleLogin" type="Password" />
            </f:SimpleForm>
		</semantic:content>
	</semantic:SemanticPage>
</mvc:View>